<UserControl
    x:Class="VideoSenderClientApp.Views.AudioRecord"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoSenderClientApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:ConnectionId='2' x:Name="AudioGrid"                                                        >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <AppBarToggleButton x:ConnectionId='3' x:Name="RecordAudio"                           Content="MicRecord">
                <AppBarToggleButton.Icon>
                    <SymbolIcon Symbol="Microphone"/>
                </AppBarToggleButton.Icon>
            </AppBarToggleButton>
        </StackPanel>
    </Grid>
</UserControl>

